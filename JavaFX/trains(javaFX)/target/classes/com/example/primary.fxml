      <Button fx:id="trainsButton" onAction="#switchToList"/>
      <Button fx:id="addTrainButton" onAction = "#switchToTrain"/>
      <Button fx:id="futureButton" onAction = "#switchToFlight"/>

   </children>


   

</VBox>
